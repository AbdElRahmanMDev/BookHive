@model UserFormViewModel


<form asp-action="@(!string.IsNullOrEmpty(Model?.Id) ? "Edit" : "Create")"
      data-ajax-method="post"
      data-ajax="true"
      data-ajax-begin="OnModelBegin"
      data-ajax-success="onModelSuccess"
      data-ajax-failure="showErrorMessage"
      data-ajax-complete="OnModelComplete">
    @if (!string.IsNullOrEmpty(Model?.Id))
    {
        <input type="hidden" asp-for=Id />
    }
    <div class="mb-5">
        <div class="form-floating mb-2">
            <input class="form-control" asp-for="FullName" />
            <label asp-for="FullName"></label>
        </div>
        <span asp-validation-for="FullName" class="text-danger"></span>

    </div>
    <div class="mb-5">
        <div class="form-floating mb-2">
            <input class="form-control" asp-for="UserName" />
            <label asp-for="UserName"></label>
        </div>
        <span asp-validation-for="UserName" class="text-danger"></span>

    </div> 
    <div class="mb-5">
        <div class="form-floating mb-2">
            <input class="form-control" asp-for="Email" />
            <label asp-for="Email"></label>
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>


    <div class="mb-5">
        <div class="form-floating mb-2">
            <select class="form-select  js-select2" id="Role" data-placeholder="Select Authors" asp-for="SelectedRoles" asp-items="@Model.Roles">
                <option value="">Select Author</option>
            </select>
            <label asp-for="SelectedRoles"></label>
        </div>
        <span asp-validation-for="SelectedRoles" class="text-danger"></span>
    </div>




   @if(string.IsNullOrEmpty(Model?.Id)){
        <div class="mb-5">
            <div class="form-floating mb-2">
                <input class="form-control" asp-for="Password" />
                <label asp-for="Password"></label>
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>



        <div class="mb-5">
            <div class="form-floating mb-2">
                <input class="form-control" asp-for="ConfirmPassword" />
                <label asp-for="ConfirmPassword"></label>
            </div>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
   }

    <partial name="_footerModel" />
</form>
