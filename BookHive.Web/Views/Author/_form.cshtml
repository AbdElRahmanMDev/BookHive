@model AuthorFormViewModel

<form asp-action="@(Model?.Id > 0 ? "Edit" : "Create")"
      data-ajax-method="post"
      data-ajax="true"
      data-ajax-begin="OnModelBegin"
      data-ajax-success="onModelSuccess"
      data-ajax-failure="showErrorMessage"
      data-ajax-complete="OnModelComplete">
    @if (Model?.Id > 0)
    {
        <input type="hidden" asp-for=Id />
    }
    <div class="mb-5">
        <div class="form-floating mb-2">
            <input class="form-control" asp-for="Name" />
            <label asp-for="Name"></label>
        </div>
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>
    <partial name="_footerModel" />
</form>




